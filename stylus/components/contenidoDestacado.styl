.ContenidoDestacado__descripcion
	margin 0 5em
	z-index 2
	img
		margin-right 2em
	p
		color:$azulProgress
		font-weight 700
		font-size 1.5em
		display flex
		align-items center
	a
		margin-left: 2em;
		color:$azulProgress
		border: solid 2px $azulProgress;
		padding: 0.1em 1em;
		margin-left 2em
		&:hover,&:focus
			text-decoration none
	.circle
		width: 30px;
		height: 30px;
		background: green;
		border-radius: 50%;
		align-items: center;
		justify-content: center;
		display: flex;
		margin-left: 1em;
		color: white;
.ContenidoDestacado__fondo
	position: absolute
	width: 100%
	height: 80%
	background: $grisImagenDestacada
	top: 10%
	z-index 1
